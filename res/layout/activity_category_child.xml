<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_head_title"/>
    <cn.ucai.fulicenter.utils.CatChildFilterButton
        android:id="@+id/btnCatChildFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:drawableRight="@drawable/arrow2_up"
        android:background="@null"
        android:text="分类"
        android:textColor="@color/white"
        />
    <cn.ucai.fulicenter.utils.ColorFilterButton
        android:id="@+id/btnColorFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#f90"
        android:text="筛选"
        android:textColor="#fff"
        />
</RelativeLayout>